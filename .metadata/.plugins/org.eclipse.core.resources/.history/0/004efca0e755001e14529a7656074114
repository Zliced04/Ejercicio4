package ejercicio4;

public class Animal {
	private String nombre;
	private String familia;
	private String color;
	private String dieta;
	private String vida;
	
	
	
	public Animal(String nombre, String familia, String color, String dieta, String vida) {
		this.setNombre(nombre);
		this.familia = familia;
		this.color = color;
		this.dieta = dieta;
		this.vida = vida;
	}

	public void comer() {
		System.out.println("El" + getNombre() + "se alimenta de: " + dieta);
		
	}
	
	public void envejecer() {
		System.out.println("La esperanza de vida del"+ getNombre() + "es de:" + vida);
	}

	public String getNombre() {
		return nombre;
	}

	public void setNombre(String nombre) {
		this.nombre = nombre;
	}
	
	

}
